<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/_7sdp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Narathi"
        android:textColor="@color/purple_500"
        android:textStyle="bold"
        android:textSize="@dimen/_15sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/alternatelangfrom"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/alternatelangfrom"
        android:text="translating..."
        app:layout_constraintTop_toBottomOf="@+id/alternatelangfrom"
        android:textSize="@dimen/_14sdp"
        android:id="@+id/alternatelangtranslation"
        />
</androidx.constraintlayout.widget.ConstraintLayout>